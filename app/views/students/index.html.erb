
<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Name</th>
      <th scope="row">Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %> <%= student.sname %></td>
        <td><%= student.course %></td>
        <td><%= link_to 'View', student, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Enroll New Student', new_student_path, class:"btn btn-outline-success" %>
