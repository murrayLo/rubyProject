<!-- Working Search Functionality -->
<%= form_tag students_path, class:"form-inline my-2 my-lg-0", :method => 'get' do %>
  <%= text_field_tag :search, params[:search], class:"form-control mr-sm-2" %>
  <%= submit_tag "Search",  class:"btn btn-outline-secondary my-2 my-sm-0" %>
<% end %>

<br>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Name</th>
      <th scope="row">Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %> <%= student.sname %></td>
        <td><%= student.course %></td>
        <td><%= link_to 'View', student, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

