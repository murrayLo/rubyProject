<!-- Working Search Functionality -->
<%= form_tag subjects_path, class:"form-inline my-2 my-lg-0", :method => 'get' do %>
  <%= text_field_tag :search, params[:search], class:"form-control mr-sm-2" %>
  <%= submit_tag "Search",  class:"btn btn-outline-secondary my-2 my-sm-0" %>
<% end %>

<br>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.title %></td>
        <td><%= link_to 'View', subject, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

