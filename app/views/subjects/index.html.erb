
<h1>Subjects</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Title</th>
      <th scope="row">Lecturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.title %></td>
        <td><%= subject.lecturer %></td>
        <td><%= link_to 'View', subject, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path, class:"btn btn-outline-success" %>
