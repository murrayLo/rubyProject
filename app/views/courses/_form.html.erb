<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Course Title' %>
    <%= f.input :subject1, :collection => @subject_titles %>
    <%= f.input :subject2, :collection => @subject_titles %>
    <%= f.input :subject3, :collection => @subject_titles %>
    <%= f.input :subject4, :collection => @subject_titles %>
    <%= f.input :department, :collection => %w[Business Computing] %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-outline-success" %>
  </div>
<% end %>