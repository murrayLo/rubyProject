
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subject1 %>
    <%= f.input :subject2 %>
    <%= f.input :subject3 %>
    <%= f.input :subject4 %>
    <%= f.input :department %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
