<!-- Working Search Functionality -->
<%= form_tag courses_path, class:"form-inline my-2 my-lg-0", :method => 'get' do %>
  <%= text_field_tag :search, params[:search], class:"form-control mr-sm-2" %>
  <%= submit_tag "Search",  class:"btn btn-outline-secondary my-2 my-sm-0" %>
<% end %>

<br>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Title</th>
      <th scope="row">Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.department %></td>
        <td><%= link_to 'View', course, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

