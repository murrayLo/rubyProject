<p id="notice"><%= notice %></p>

<h1>Lecturers</h1>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Lecturer</th>
      <th scope="row">Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr>
        <td><%= lecturer.title %> <%= lecturer.fname %> <%= lecturer.sname %></td>
        <td><%= lecturer.subject %></td>
        <td><%= link_to 'View', lecturer, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_lecturer_path(lecturer), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecturer', new_lecturer_path, class:"btn btn-outline-success" %>
