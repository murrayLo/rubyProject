<!-- Working Search Functionality -->
<%= form_tag lecturers_path, class:"form-inline my-2 my-lg-0", :method => 'get' do %>
  <%= text_field_tag :search, params[:search], class:"form-control mr-sm-2" %>
  <%= submit_tag "Search",  class:"btn btn-outline-secondary my-2 my-sm-0" %>
<% end %>

<br>

<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Lecturer</th>
      <th scope="row">Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr>
        <td><%= lecturer.title %> <%= lecturer.fname %> <%= lecturer.sname %></td>
        <td><%= lecturer.subject %></td>
        <td><%= link_to 'View', lecturer, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_lecturer_path(lecturer), class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

